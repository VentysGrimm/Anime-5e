{
  "id": "anime5e",
  "title": "Anime 5E",
  "description": "A system for playing Anime 5E in Foundry VTT",
  "version": "1.0.0",
  "compatibility": {
    "minimum": "12",
    "verified": "12",
    "maximum": "13"
  },
  "authors": [
    {
      "name": "Ventys Grimm"
    }
  ],
  "esmodules": [
    "module/anime5e.js"
  ],
  "styles": [
    "styles/anime5e.css",
    "styles/sheets/character.css",
    "styles/sheets/npc.css",
    "styles/sheets/monster.css",
    "styles/sheets/item.css"
  ],
  "packs": [
    {
      "name": "attributes",
      "label": "Attributes",
      "path": "packs/attributes.db",
      "type": "Item",
      "system": "anime5e"
    },
    {
      "name": "defects",
      "label": "Defects",
      "path": "packs/defects.db",
      "type": "Item",
      "system": "anime5e"
    },
    {
      "name": "equipment",
      "label": "Equipment",
      "path": "packs/equipment.db",
      "type": "Item",
      "system": "anime5e"
    },
    {
      "name": "armor",
      "label": "Armor",
      "path": "packs/armor.db",
      "type": "Item",
      "system": "anime5e"
    },
    {
      "name": "weapons",
      "label": "Weapons",
      "path": "packs/weapons.db",
      "type": "Item",
      "system": "anime5e"
    },
    {
      "name": "vehicles",
      "label": "Vehicles",
      "path": "packs/vehicles.db",
      "type": "Item",
      "system": "anime5e"
    }
  ],
  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "lang/en.json"
    }
  ],
  "documentTypes": {
    "Actor": {
      "player": {
        "label": "Player Character",
        "playable": true,
        "type": "character",
        "sheet": {
          "class": "CharacterSheet",
          "template": "templates/actor/character-sheet.html"
        }
      },
      "npc": {
        "label": "Non-Player Character",
        "playable": false,
        "type": "npc",
        "sheet": {
          "class": "NPCSheet",
          "template": "templates/actor/npc-sheet.html"
        }
      },
      "monster": {
        "label": "Monster",
        "playable": false,
        "type": "monster",
        "sheet": {
          "class": "MonsterSheet",
          "template": "templates/actor/monster-sheet.html"
        }
      }
    },
    "Item": {
      "attribute": {
        "label": "Attribute",
        "type": "attribute"
      },
      "defect": {
        "label": "Defect",
        "type": "defect"
      },
      "weapon": {
        "label": "Weapon",
        "type": "weapon"
      },
      "armor": {
        "label": "Armor",
        "type": "armor"
      },
      "vehicle": {
        "label": "Vehicle",
        "type": "vehicle"
      },
      "enhancement": {
        "label": "Enhancement",
        "type": "enhancement"
      },
      "limiter": {
        "label": "Limiter",
        "type": "limiter"
      },
      "power": {
        "label": "Power",
        "type": "power"
      },
      "race": {
        "label": "Race",
        "type": "race"
      }
    }
  },
  "grid": {
    "distance": 5,
    "units": "ft"
  },
  "primaryTokenAttribute": "attributes.hp",
  "secondaryTokenAttribute": "attributes.mp",
  "url": "",
  "manifest": "https://github.com/VentysGrimm/Anime-5e",
  "download": "https://github.com/VentysGrimm/Anime-5e.git",
  "license": "LICENSE.txt"
} 